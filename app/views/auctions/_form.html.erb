<%= simple_form_for(@auction) do |f| %>
  <%= f.error_notification %>

  <div class="row mt-3">
    <div class="col-12">
      <% unless @auction.persisted? %>
        <h3>New Auction</h3>
      <% end %>
    </div>
  </div>


  <div class="form-row">
    <div class="col-12">
      <%= f.input :name, required: true %>
    </div>
    <div class="col-12">
      <%= f.input :active, required: true %>
    </div>
  </div>


  <div class="row my-3">
    <div class="col-12">
      <% if @auction.persisted? %>
        <%= f.submit 'Update Auction Details', class:"btn btn-success btn-md load_spinner" %>
      <% else %>
        <%= f.submit 'Create Auction', class:"btn btn-success btn-md load_spinner" %>
      <% end %>
        <%= link_to('Cancel', admin_index_path, class: "btn btn-secondary btn-md") %>
    </div>
  </div>
<% end %>
