<div class="row mt-3">
  <div class="col-sm-12">
    <h2>
      <span>Items </span><span class="small"></span>

      <small><%= link_to 'Create Item', new_item_path, class: 'btn btn-xs btn-success mb-1 ml-2' %></small>

      <!--      <small>-->
      <%#= link_to('Download Results', items_report_path, class: 'btn btn-xs btn-primary mb-1 ml-2', target: '_report') %>
      <!--      </small>-->

    </h2>
  </div>
</div>

<div class="row">
  <div class="col-12">

    <%# ************************************** %>
    <%# ************************************** %>

    <div class="items">


      <table id="item_data" class="table table-sm table-bordered table-striped my-4">
        <thead class="thead-dark">
        <tr>
          <th class="d-none d-md-table-cell">Photo</th>
          <th class="d-md-table-cell">Title</th>
          <th class="d-md-table-cell">Starting Bid</th>
          <th class="d-md-table-cell">Minimum Bid</th>
          <th class="d-md-table-cell">Active?</th>
          <th class="d-md-table-cell text-center actions">Actions</th>
        </tr>
        </thead>

        <tbody>
        <% @items.each do |item| %>

          <tr>
            <td class="d-none d-md-table-cell px-3"><%= image_tag(item.photo.thumb.url , class: 'img-fluid') %></td>
            <td class="px-3"><%= item.name %></td>
            <td class="px-3 d-md-table-cell"><%= item.starting_bid %></td>
            <td class="px-3 d-md-table-cell"><%= item.min_bid %></td>
            <td class="px-3 d-md-table-cell"><%= item.active.to_s.titleize %></td>
            <td class="px-3 d-md-table-cell text-center">
              <%= link_to 'Edit', edit_item_path(item), class: "btn btn-xs btn-primary" %>
              <%= link_to 'Destroy', item_path(item), method: :delete,
                          data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-primary" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>