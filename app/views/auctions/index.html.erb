
<div id="accordion" class="mt-3">

  <% @sections.each do |section| %>
    <div class="card">
      <div class="card-header" id="heading_<%= section.id %>">
        <h3 class="mb-0">
          <div class="btn btn-link" data-toggle="collapse" data-target="#collapse_<%= section.id %>" aria-expanded="true" aria-controls="collapse_<%= section.id %>">
            <div class="row">
              <div class="col-9">
                <i class="fa fa-arrow-circle-down" aria-hidden="true"></i> <%= section.display_name %>
              </div>
              <div class="col-3">
                <%= section.end_time %>
              </div>
            </div>
          </div>
        </h3>
      </div>
      <div id="collapse_<%= section.id %>" class="collapse collapsed" aria-labelledby="heading_<%= section.id %>" data-parent="#accordion">
        <div class="card-body">
          <% section.items.each do |item| %>
            <%= render partial: "auctions/partials/auction_items", locals: { item: item, section: section } %>
          <% end %>
        </div>
      </div>
    </div>`
  <% end %>
</div>
