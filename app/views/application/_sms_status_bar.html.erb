 <% if current_user.receive_sms == true %>
    <div class="row p-md">
      <div class="col-lg-12 text-center">
        <div class="row alert alert-success">
          <div class="col-lg-12">You're opted-in to SMS updates.</div>
          <div class="col-lg-12"><a href="sms:<%= ENV["TWL_NUM"] %>?&body=stop">Click to send 'stop' to <%= ActionController::Base.helpers.number_to_phone(ENV["TWL_NUM"].delete("+"), area_code: true) %> to opt-out.</a></div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="row p-md">
      <div class="col-lg-12 text-center">
        <div class="row alert alert-danger">
          <div class="col-lg-12">You're opted-out of SMS updates.</div>
          <div class="col-lg-12"><a href="sms:<%= ENV["TWL_NUM"] %>?&body=start">Click to send 'start' to <%= ActionController::Base.helpers.number_to_phone(ENV["TWL_NUM"].delete("+"), area_code: true) %> to opt-in.</a></div>
        </div>
      </div>
    </div>
<% end %>